[core]
  excludesfile = ~/.gitignore
  fileMode = false
  pager = less -r
[branch]
  autosetupmerge = true
[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
  pager = true
[alias]
  sts = status -s
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  ign = ls-files -o -i --exclude-standard
  wd = diff --word-diff
  # smsync && smup helps recover from submodule problems
  smsync = submodule sync --recursive
  smup = submodule update --recursive
[push]
  default = simple
[include]
  path = ~/.gitconfig.local
